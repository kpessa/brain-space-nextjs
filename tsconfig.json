{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Gradual migration to strict mode in progress
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false, // Will enable after fixing Jest types
    "strictNullChecks": false, // Relaxed null checks
    "strictFunctionTypes": false, // Relaxed function types
    "strictBindCallApply": false, // Relaxed bind/call/apply
    "strictPropertyInitialization": false, // Relaxed property init
    "noImplicitThis": false, // Allow implicit 'this'
    "alwaysStrict": false, // No strict mode
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
